<%= form_with(model: kb_document, class: "contents") do |form| %>
  <% if kb_document.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(kb_document.errors.count, "error") %> prohibited this kb_document from being saved:</h2>
      <ul>
        <% kb_document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :file %>
    <% if kb_document.file.representable? %>
      <%= image_tag kb_document.file.representation(resize_to_limit: [200, 200]) %>
    <% else %>
      <%= link_to rails_blob_path(kb_document.file, disposition: "attachment") do %>
        <%= image_tag "placeholder.png", alt: "Download file" %>
      <% end %>
    <% end %>
    <%= link_to kb_document.file.filename, rails_blob_path(kb_document.file, disposition: "attachment") %>
    <br />
    <%= form.file_field :file %>
  </div>
  <div class="my-5">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
