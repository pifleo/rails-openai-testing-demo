<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <!-- https://tailwindcomponents.com/component/free-tailwind-css-advance-table-component -->
  <div class="sm:px-6 w-full">
    <div class="px-4 md:px-10 py-4 md:py-7">
      <div class="flex items-center justify-between">
        <p tabindex="0" class="focus:outline-none text-base sm:text-lg md:text-xl lg:text-2xl font-bold leading-normal text-gray-800">Documents (ObjectStore)</p>
      </div>
    </div>
    <div class="bg-white py-4 md:py-7 px-4 md:px-8 xl:px-10">
      <div class="sm:flex items-center justify-between">
        <div class="flex items-center">
        </div>
        <%= link_to new_object_store_path, class: "focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 mt-4 sm:mt-0 inline-flex items-start justify-start px-6 py-3 bg-indigo-700 hover:bg-indigo-600 focus:outline-none rounded" do %>
          <p class="text-sm font-medium leading-none text-white">Add Document</p>
        <% end %>
      </div>
      <div class="mt-7 overflow-x-auto">
        <table class="w-full whitespace-nowrap">
          <tbody>
            <%= render partial: 'object_store_document', collection: @object_stores %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
